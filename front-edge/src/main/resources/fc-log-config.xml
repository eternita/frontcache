<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    
	<Properties>
		<Property name="log-path">E:/dev/fc/</Property>
	</Properties>
 

	<Appenders>

		<RollingFile name="RollingFile" fileName="${log-path}/frontcache.log"
			filePattern="${log-path}/frontcache-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout>
				<pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} %m%n</pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="25" />
		</RollingFile>	    

		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd_HH:mm:ss.SSS} %m%n" />
		</Console>

	</Appenders>

	<Loggers>
		<Logger name="org.frontcache.reqlog" level="trace" additivity="false">
			<appender-ref ref="RollingFile" level="DEBUG" />
			<appender-ref ref="Console" level="trace" />
		</Logger>
	</Loggers>
</Configuration>